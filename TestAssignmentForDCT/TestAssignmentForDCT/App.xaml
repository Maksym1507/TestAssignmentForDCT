<Application x:Class="Wpf_Using_ViewModels_in_MVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:TestAssignmentForDCT.Views"
             xmlns:dialogWindows="clr-namespace:TestAssignmentForDCT.Views.DialogWindows"
             xmlns:viewModels="clr-namespace:TestAssignmentForDCT.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:CoinListViewModel}">
            <views:CoinListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:CoinDetailsViewModel}">
            <dialogWindows:CoinDetailsWindow/>
        </DataTemplate>
    </Application.Resources>
</Application>
